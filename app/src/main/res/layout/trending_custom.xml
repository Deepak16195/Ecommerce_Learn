<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">



    <androidx.cardview.widget.CardView
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:cardCornerRadius="5dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="14dp"
                android:id="@+id/trending_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$85"
                android:layout_marginLeft="140dp"/>
            <TextView
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_below="@id/trending_price"
                android:id="@+id/trending_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modern Single Sofa"
                android:layout_marginLeft="140dp"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:layout_below="@id/trending_name"
                android:id="@+id/trending_typeCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Men"
                android:layout_marginLeft="140dp"/>

            <TextView
                android:layout_below="@id/trending_name"
                android:id="@+id/trending_rating"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/trending_star"
                android:layout_toRightOf="@id/trending_typeCategory"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="7dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:id="@+id/trending_ratingvalue"
                android:layout_toRightOf="@id/trending_rating"
                android:layout_below="@id/trending_name"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="1dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:layout_below="@id/trending_typeCategory"
                android:id="@+id/trending_description"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit ame,t\n consectetur adiposcing elit,\n sed eiusmod tempor"
                android:layout_marginLeft="140dp"/>

            <ImageView
                android:id="@+id/trending_love"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/trending_love"
                android:layout_alignParentRight="true"
                android:layout_marginRight="7dp"
                android:layout_marginTop="5dp"/>
            <ImageView
                android:id="@+id/trending_buy"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/trending_buy"
                android:layout_alignParentRight="true"
                android:layout_below="@id/trending_love"
                android:layout_marginRight="7dp"
                android:layout_marginTop="20dp"/>
            <ImageView
                android:id="@+id/trending_new"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/trending_shiftright"
                android:layout_alignParentRight="true"
                android:layout_below="@id/trending_buy"
                android:layout_marginRight="7dp"
                android:layout_marginTop="20dp"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="160dp"
        app:cardCornerRadius="5dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/hotdeal_armchair"
            android:id="@+id/trending_image"/>
    </androidx.cardview.widget.CardView>
</FrameLayout>